<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/color_2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/silver_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="tv_listrow_cooking"
            android:gravity="center"
            android:id="@+id/tv_listrow_cooking"
            android:layout_below="@+id/tv_phone"
            android:layout_toRightOf="@+id/tv_slip_number"
            android:layout_toLeftOf="@+id/tv_total_price" />

        <Button
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cancel_order_button"
            android:background="@drawable/btn_cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finish_order_button"
            android:background="@drawable/btn_done"
            android:layout_below="@+id/tv_total_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="bottom"
            />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textSize="50sp"
            android:background="@drawable/circle_02"
            android:text="Number"
            android:id="@+id/tv_slip_number"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="tv_phone"
            android:id="@+id/tv_phone"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_slip_number"
            android:layout_marginLeft="79dp" />

        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="#ff4a2d"
            android:text="50nt"
            android:id="@+id/tv_total_price"
            android:layout_below="@+id/cancel_order_button"
            android:layout_alignRight="@+id/finish_order_button" />

        <!-- android:textSize="@dimen/box_textsize" -->

    </RelativeLayout>

</LinearLayout>