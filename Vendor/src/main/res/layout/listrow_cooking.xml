<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/color_2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/silver_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <CheckBox
            android:id="@+id/extra_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="50dp"
            android:scaleX="3.0"
            android:scaleY="3.0"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_listrow_cooking"
            android:layout_below="@+id/tv_phone"
            android:layout_toRightOf="@+id/tv_slip_number"/>

        <Button
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cancel_order_button"
            android:background="@drawable/btn_cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finish_order_button"
            android:background="@drawable/btn_done"
            android:layout_below="@+id/tv_total_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="bottom"
            />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="A01"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/circle_02"
            android:id="@+id/tv_slip_number"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tv_phone"
            android:text="0912321321"
            android:textColor="@color/color_2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_slip_number"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tv_datetime"
            android:text="12:00 "
            android:textColor="@color/color_2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="150 å…ƒ"
            android:textColor="#ff4a2d"
            android:id="@+id/tv_total_price"
            android:layout_below="@+id/cancel_order_button"
            android:layout_alignRight="@+id/finish_order_button" />

        <!-- android:textSize="@dimen/box_textsize" -->

    </RelativeLayout>

</LinearLayout>